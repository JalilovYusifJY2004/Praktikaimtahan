@using Praktikabitdi.Areas.Admin.ViewModels;
@model UpdateTeamVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic form elements</h4>
                        <p class="card-description">
                            Basic form elements
                        </p>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                               <div class="form-group">
                         <img src="~/assets/images/@Model.Image"/>
                                <input asp-for="Image" type="hidden" class="form-control"  placeholder="Image">
                      
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo" for="exampleInputName1">Photo</label>
                                <input asp-for="Photo" class="form-control" id="exampleInputName1" placeholder="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" for="exampleInputName1">Name</label>
                                <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" for="exampleInputName1">Description</label>
                                <input asp-for="Description" class="form-control" id="exampleInputName1" placeholder="Description">
                                <span asp-validation-for="Description"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a asp-action="Index" asp-controller="team" class="btn btn-success">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>